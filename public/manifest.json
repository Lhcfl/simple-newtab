{
  "name": "Simple Newtab 1.0",
  "description": "Maybe the simplest new tab",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "bookmarks",
    "topSites"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "optional_host_permissions": [
    "file:///"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "./favicon.ico",
    "32": "./favicon.ico",
    "48": "./favicon.ico",
    "128": "./favicon.ico"
  }
}